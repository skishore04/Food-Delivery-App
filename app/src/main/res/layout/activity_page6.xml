<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_center"
    tools:context=".Activity.Page6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:text="title"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="Rs."
            android:textAlignment="center"
            android:textColor="#880E4F"
            android:textSize="34sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="298dp"
            android:layout_height="327dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card">


            <ImageView
                android:id="@+id/picfood"
                android:layout_width="314dp"
                android:layout_height="274dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.494"
                app:srcCompat="@drawable/img_dosa" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/MinusBtn"
                android:layout_width="49dp"
                android:layout_height="52dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/minus" />

            <TextView
                android:id="@+id/numberOrderTxt"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center|top"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#551D98"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/plusBtn"
                android:layout_width="49dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/plus" />

        </LinearLayout>

        <TextView
            android:id="@+id/addToCartBtn"
            android:layout_width="223dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonadd"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="Add to cart"
            android:textAlignment="center"
            android:textColor="#FDFAFA"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/backtomenu"
            android:layout_width="396dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:background="@drawable/myshapeu"
            android:fontFamily="@font/alegreya_sc"
            android:text="Back to Menu"
            android:textAlignment="center"
            android:textColor="#FDFAFA"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>



    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="2sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />




</androidx.constraintlayout.widget.ConstraintLayout>